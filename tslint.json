{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended"
  ],
  "jsRules": {
    "no-unused-expression": true
  },
  "linterOptions": {
    "exclude": [
      "*.json",
      "**/*.json"
    ]
  },
  "rules": {
    "ban-types": false,
    "indent": [true, "spaces", 2],
    "ordered-imports": [false],
    "quotemark": [true, "single"],
    "semicolon": [true, "always"],
    "trailing-comma": [true, "never"]
  },
  "rulesDirectory": []
}

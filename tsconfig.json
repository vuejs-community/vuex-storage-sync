    "allowImportingTsExtensions": true,
    "baseUrl": "./src",
    "declaration": true,
    "lib": [
      "DOM",
      "ESNext"
    ],
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "removeComments": false,
    "target": "ES2015"
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*.ts"
  ]
}
